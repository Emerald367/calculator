    "paths": {
        "/add": {
            "get": {
                "summary": "Takes two number inputs and adds them",
                "parameters": [
                    {
                        "name": "num1",
                        "in": "query",
                        "required": true,
                        "type": "number"
                    },
                    {
                        "name": "num2",
                        "in": "query",
                        "required": true,
                        "type": "number"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "An error occurred"
                    }
                }
            }
        },
